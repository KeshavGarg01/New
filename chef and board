
#include <iostream>
using namespace std;
int main()
{
    int t=0,n=0,sq=0;
    cin>>t;
    for(int i=0; i<t; i++)
    {
        //cout<<"enter size";
    cin>>n;
    int j=1;
    if(n>0)
    {
       while( j < n )
        {
            sq = sq + (n-j+1)*(n-j+1);
            j+=2;
        }
        if(n%2==0)
        {
        cout<<sq<<endl;
        }
        else 
        {
        cout<<sq+1<<endl;
        }
        sq=0;
    }
    else
    exit(0);
    }
    return 0;
    
}
